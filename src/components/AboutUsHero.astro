---
import aboutheroData from "../content/pages/abouthero.json"
---

<section
  class="bg-center bg-cover bg-no-repeat bg-logo-color overflow-hidden"
  style={`background-image: url('${aboutheroData.background}')`}
>
  <div class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56">
    <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl animate-slide-in-up">
      {aboutheroData.title}
    </h1>
  </div>
</section>

